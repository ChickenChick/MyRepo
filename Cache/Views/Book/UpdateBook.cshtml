@using Cache.Contracts.Model
@model BookSummary
@{
    ViewBag.Title = "UpdateBook";
}

<h2>UpdateBook</h2>

<h2>Книга № @Model.Id</h2>

@using (Html.BeginForm())
{
<fieldset>
    @Html.HiddenFor(m => m.Id)
    <p>
        @Html.LabelFor(m => m.Name, "Название книги")
        <br />
        @Html.EditorFor(m => m.Name)
    </p>
    <p>
        @Html.LabelFor(m => m.Price, "Цена")
        <br />
        @Html.EditorFor(m => m.Price)
    </p>
    <p>
        @Html.LabelFor(m => m.AuthorId, "ID автора")
        <br />
        @Html.EditorFor(m => m.AuthorId)
    </p>
    <p>
        @Html.LabelFor(m => m.Url, "Url картинки")
        <br />
        @Html.EditorFor(m => m.Url)
    </p>
    <p> <input type="submit" value="Изменить" /> </p>
</fieldset>
}